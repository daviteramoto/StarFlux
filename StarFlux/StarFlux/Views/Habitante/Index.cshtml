@model List<HabitanteViewModel>
@{
    ViewData["Title"] = "Habitantes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body onload="buscaHabitantes()">
    <h2 class="text-center">Habitantes</h2>
    <br />
    <fieldset id="areaFiltro" class="form-group">
        <div class="row justify-content-center">
            <div class="col-lg-1">
                Código <br />
                <input type="text" id="codigo" class="form-control" />
            </div>
            <div class="col-lg-3">
                Nome <br />
                <input type="text" id="nome" class="form-control" />
            </div>
            <div class="col-lg-2">
                Data de Nascimento <br />
                <input type="date" id="dataInicial" class="form-control" />
            </div>
            <div hidden class="col-lg-2">
                <br />
                <input type="date" id="dataFinal" class="form-control" />
            </div>
            <div class="col-lg-3">
                Apartamento <br />
                <select id="apartamento" class="form-control" asp-items="@ViewBag.Apartamentos"></select>
            </div>
            <div class="col-lg-2">
                Torre <br />
                <select id="torre" class="form-control" asp-items="@ViewBag.TorresH"></select>
            </div>
            <div class="col-lg-1">
                <br />
                <input type="button" id="btnFiltro" class="btn btn-info" value="Aplicar"
                       onclick="buscaHabitantes()" />
            </div>
        </div>
    </fieldset>

    <br />
    <a href="/Habitante/Create" class="btn btn-info">Cadastrar novo <u>Habitante</u></a>
    <br />
    <br />
    <div id="resultadoConsultaHabitantes" class="table-responsive"></div>
</body>
