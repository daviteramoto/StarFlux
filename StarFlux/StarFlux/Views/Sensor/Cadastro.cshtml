@model SensorViewModel
@{
    ViewData["Title"] = "Sensores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body class="text-center">
    <h1>Cadastro de Sensores</h1>
    <br />
    <br />
    <div class="row justify-content-center">
        <form action="Save" method="post" class="col-md-6">

            <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />

            <label for="Id" class="control-label">ID</label>
            <input asp-for="ID" class="form-control" readonly />

            <span asp-validation-for="ID" class="text-danger"></span>
            <br />

            <label for="Nome" class="control-label">Nome do sensor</label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
            <br />

            <label for="Entidade" class="control-label">Entidade</label>
            <input asp-for="Entidade" class="form-control" />
            <span asp-validation-for="Entidade" class="text-danger"></span>
            <br />

            <br />
            <input type="submit" value="Salvar dados" class="btn btn-info" />
            <br />
        </form>
    </div>
</body>
