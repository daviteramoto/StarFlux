@model SensorViewModel
@{
    ViewData["Title"] = "Sensores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body class="text-center">
    <h2>Cadastro de Sensor</h2>
    <br />
    <br />
    <div class="row justify-content-center">
        <form action="Save" method="post" class="col-md-6">

            <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />

            <label for="Id" class="control-label">Código:</label>
            <input asp-for="ID" class="form-control text-center" readonly />

            <span asp-validation-for="ID" class="text-danger"></span>
            <br />

            <label for="Nome" class="control-label">Nome do Sensor:</label>
            <input asp-for="Nome" class="form-control text-center" />
            <span asp-validation-for="Nome" class="text-danger"></span>
            <br />

            <label for="Entidade" class="control-label">Entidade:</label>
            <input asp-for="Entidade" class="form-control text-center" placeholder='Flux:0XX'/>
            <span asp-validation-for="Entidade" class="text-danger"></span>

            <br />
            <br />
            <a href="/Sensor" class="btn btn-info" style="background-color: #08626f !important; border-color: #08626f !important ">Voltar</a>
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <input type="submit" value="Salvar" class="btn btn-info" />
            <br />
        </form>
    </div>
</body>
