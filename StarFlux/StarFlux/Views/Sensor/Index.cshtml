@model List<SensorViewModel>
@{
    ViewData["Title"] = "Sensores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body onload="buscaSensores()">
    <h2 class="text-center">Sensores</h2>
    <br />
    <fieldset id="areaFiltroSensores" class="form-group">
        <div class="row justify-content-center">
            <div class="col-lg-1">
                Código <br />
                <input type="text" id="codigoSensor" class="form-control" />
            </div>
            <div class="col-lg-4">
                Nome <br />
                <input type="text" id="nomeSensor" class="form-control" />
            </div>
            <div class="col-lg-4">
                Entidade <br />
                <input type="text" id="entidadeSensor" class="form-control" />
            </div>
            <div class="col-lg-1">
                <br />
                <input type="button" id="btnFiltroSensores" class="btn btn-info" value="Aplicar"
                       onclick="buscaSensores()" />
            </div>
        </div>
    </fieldset>

    <br />
    <a href="/Sensor/Create" class="btn btn-info">Cadastrar novo <u>Sensor</u></a>
    <br />
    <br />
    <div id="resultadoConsultaSensores" class="table-responsive"></div>
</body>