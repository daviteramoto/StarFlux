@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<body class="text-center">
    <h1>Login</h1>
    <br />
    <br />
    <div class="row justify-content-center">
        <div class="col-lg-3">
            <form action="/login/Fazlogin" method="post" class="mx-auto">
                <label for="login" class="control-label">Usuário</label>
                <input type="text" name="login" class="form-control" required placeholder='Usuário...' />
                <br />
                <label for="senha" class="control-label">Senha</label>
                <input type="password" name="senha" class="form-control" required placeholder='Senha...' />
                <br />
                <br />
                <input type="submit" value="Login" class="btn btn-info" />
                <br />
                <span class="text-danger"> @ViewBag.Erro</span>
            </form>
            <br />
            <a href="/Login/Create" class="btn btn-info">Novo registro</a>
        </div>
    </div>
</body>
